<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
    <!-- security group -->
        <record model="ir.module.category" id="module_category_estate_property">
            <field name="name">Real Estate Property</field>
            <field name="description">Helps you handle the property</field>
            <field name="sequence">10</field>
        </record>

        <record model="ir.module.category" id="module_category_estate_property">
            <field name="name">Real Estate Property</field>
            <field name="description">Helps you handle the property</field>
            <field name="sequence">10</field>
            <field name="parent_id" ref="module_category_estate_property"/>
        </record>

        <!-- Access Rights -->
        
        <record id="group_estate_property_agent" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="module_category_estate_property"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
         

        <record id="group_estate_property_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_estate_property"/>
            <field name="implied_ids" eval="[(4, ref('group_estate_property_agent'))]"/>
        </record>

        <!-- record rule -->

        <record id="estate_property_offer_rule_agent" model="ir.rule">
            <field name="name">Agent Offer</field>
            <field name="model_id" ref="model_estate_property_offer"/>
            <field name="domain_force">[('salesman_id','=', user.id)]</field>
            <field name="groups" eval="[(4, ref('estate.group_estate_property_agent'))]"/>
        </record>

        <record id="estate_property_offer_rule_manager" model="ir.rule">
            <field name="name">Manager Offer</field>
            <field name="model_id" ref="model_estate_property_offer"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('estate.group_estate_property_manager'))]"/>
        </record>

    </data>
</odoo>